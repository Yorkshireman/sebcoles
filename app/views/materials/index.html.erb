<p id="notice"><%= notice %></p>

<div class="materials-wrapper">
  <h2>Materials</h2>

  <% @materials.each do |material| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"><%= material.title %>, Level: <%= material.level %></h4>
      </div>
      <div class="panel-body">
        <%= material.description %>
      </div>
      <div class="panel-footer"><%= material.link %></div>
    </div>  
    <%= link_to 'Show', material %>
    <%= link_to 'Edit', edit_material_path(material) %>
    <%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <br>
  <%= link_to 'New Material', new_material_path %>
</div>