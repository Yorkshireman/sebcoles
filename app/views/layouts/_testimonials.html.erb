<h3>Testimonials</h3>

<% @testimonials.each do |testimonial| %>
	<div class="panel panel-default">
	  	<div class="panel-heading">
	  		<h4 class="panel-title"><%= testimonial.student.full_name %></h4>
	  	</div>
	    <div class="panel-body">
	    	<p><%= testimonial.content %></p>
		    <% if user_signed_in? && current_user.testimonial_owner?(testimonial) %>
		    	<td><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
		    <% end %>
		    <% if user_signed_in? && (current_user.testimonial_owner?(testimonial) || current_user.admin) %>
		    	<td><%= link_to 'Delete', testimonial, method: :delete, data: { confirm: 'Are you sure you want to permanently delete this testimonial? This action cannot be undone.' } %></td>
    		<% end %>
    	</div>
    </div>
<% end %>

