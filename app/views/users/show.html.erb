<p id="notice"><%= notice %></p>

<p>
	Name: <%= @user.first_name %>
	<%= @user.last_name %>
</p>
<p>
	Email: <%= @user.email %><br>
</p>
<p>
	Classes:<br>
	<% @user.groups.each do |group| %>
		<%= link_to group do %>
			<%= group.title %>
		<% end %>
	<% end %>
</p>

<p>Assign to a Class</p>

<%= form_for @user, url: {action: "assign_to_group"}, html: {class: "form"} do |f| %>
	<%= collection_select(:student, :group_id, Group.all, :id, :title) %>
	<%= f.submit "assign_to_group" %>
<% end %>

